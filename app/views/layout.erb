<!DOCTYPE html>
<html lang="en">
<head>
  <title>Clean Sweep</title>

  <!-- custom stylesheets -->
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/application.css">

  <!-- responsiveness -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- semantic ui -->
  <link rel="stylesheet" href="/semantic/semantic.css">

  <!-- mapbox -->
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css'/>
</head>
<body>
<div id="headerbar" class="ui large borderless inverted blue menu top attached ">
  <div class="left menu">
    <a class="center aligned item">
      <i class="sidebar icon"></i>
    </a>
  </div>
  <div class="center menu">
    <span class="header item">
      CLEAN SWEEP
    </span>
  </div>
  <div class="right menu">
    <a class="item">
      <i class="share icon"></i>
    </a>
  </div>
</div>
<div class="ui bottom attached segment pushable">
<div id="sidebar" class="ui inverted labeled icon left inline vertical sidebar menu">
    <a class="item" id="sidebar-options" href="#">
      <i class="send outline icon"></i>
      Tell friends
    </a>
    <a class="item" id="sidebar-notifications" href="#">
      <i class="alarm outline icon"></i>
      Notifications
    </a>
    <a class="item" id="sidebar-history" href="#">
      <i class="history icon"></i>
      History
    </a>
    <a class="item" id="sidebar-settings" href="/settings">
      <i class="settings icon"></i>
      Settings
    </a>
    <a class="item" id="sidebar-logout" href="/logout">
      <i class="external icon"></i>
      Logout
    </a>
  </div>
  <div class="pusher">
    <div id="navbar" class="ui three item secondary pointing blue menu top attached">
      <a class="item" id="navbar-park" href="/park">
        Park
      </a>
      <a class="item" id="navbar-dashboard" href="/">
        Dashboard
      </a>
      <a class="item" id="navbar-contacts" href="/contacts">
        Contacts
      </a>
    </div>

    <div id="page-content" class="ui container ">
      <%= yield %>
    </div>
    
  </div>
</div>

  <!-- jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <!-- javascript -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>
  <script src="/js/js_plugins.js"></script>
  <script src="/semantic/semantic.js"></script>
  <script>
    $('.large.menu').children().first().on('click', function(){
      $('.ui.sidebar').sidebar('toggle');
    })
    $('.ui.sidebar')
      .sidebar({
        context: $('.bottom.segment')
      });
    $('.ui.accordion').accordion()
  </script>
</body>
</html>
