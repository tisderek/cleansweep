<h2>Your Contacts</h2>
<div class="ui container">
<div class="ui accordion">
  <% current_user.contacts.each do |c| %>
    <div class="title">
      <i class="dropdown icon"></i>
      <%= c.name %>
    </div>
    <div class="content">
      <div class="ui two column stackable grid container">
        <div class="column">
          <i class="phone icon"></i>  <%= c.phone_number %>
        </div>
        <div class="column">
          <i class="green check circle icon"></i> Phone verified
        </div>
        <div class="column">
          <div class="ui toggle checkbox">
            <input type="checkbox" name="public">
            <label>Text location &amp; street cleaning info when you park</label>
          </div>
        </div>
        <div class="column">
          <div class="ui toggle checkbox">
            <input type="checkbox" name="public">
            <label>Text street cleaning reminders you receive </label>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
  <script src="/semantic/semantic.js"></script>

  <script>
  $('.ui.accordion')
  .accordion()
;
  </script>
